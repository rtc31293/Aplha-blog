<h2 class="text-center">
    Title: <%= @article.title %>
</h2>
<div class="well col-xs-8 col-xs-offset-2">
    <h4 class="text-center description">
        <% if @article.user %>
        <ul class="listing">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <small>Created by: </small>
                    <li>
                        <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
                    </li>
                    <li class="article-title">
                        <%= link_to @article.user.username, user_path(@article.user) %>
                    </li>
                    <li>
                        <small><%= pluralize(@article.user.articles.count,"article") if @article.user.articles %></small>
                    </li>
                </div>
            </div>
        </ul>
        <% end %>
        <strong>Description:</strong>
    </h4>
    <hr>
    <%= simple_format(@article.description) %>
    <div class="article-actions">
        <% if logged_in? && current_user == @article.user %>
            <%= link_to 'Edit listing', edit_article_path(@article), class: 'btn btn-primary btn-xs'%>
            <%= link_to 'Delete  this article', article_path(@article), method: :delete, 
                data: {confirm: "Are you sure you want to delete the article?"}, class: "btn btn-danger btn-xs" %>
        <% end %>
        <%= link_to 'View all Articles', articles_path, class: 'btn btn-success btn-xs' %> 
       
    </div>
</div>
